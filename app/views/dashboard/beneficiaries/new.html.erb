<h1>Create a new beneficiary</h1>

<div class="row create-beneficiary">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([:dashboard, @beneficiary]) do |f| %>
      <%= f.label :bank_account_id %>

      <%= f.select :bank_account_id,
        options_for_select(@bank_accounts.map {|acc| ["#{acc.name} - #{acc.account_number}", acc.id]}),
        class: 'form-control', id: "select-bank-account" %>

      <%= f.label :nick_name %>
      <%= f.text_field :nick_name, class: 'form-control' %>

      <%= f.submit "Create", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>